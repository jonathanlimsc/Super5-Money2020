<!doctype html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <title>MERCHAIN</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" type="text/css" href="/stylesheets/animate.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link href='https://fonts.googleapis.com/css?family=Lato:400,100,300,700,900' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="/bower_components/angular/angular.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" ></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

  </head>
  <body>
  <% if (isLoggedIn) { %>
  <div class="top-user-bar">
  <div class="portrait">
    <img src="<%= user.portrait %>">
  </div>
  <div class="welcome">
    Hello <%= user.displayName %>
  </div>

  <div class="wallet-address">
    Your wallet address is <%= user.wallet[0].address %>
  </div>
  <div class="wallet-link"><a href="<%= user.wallet[0].link %>">
      See more here
  </div>
  <div class="logout-button"><a href="/user/logout">Logout</a></div>
   </div>
  <% } else { %>
  <div class="login-button"><a href="/user/auth/facebook"><p class="login">Sign up</p></a></div>
  <% } %>
    <div ng-app="merchainApp">
      <div class="main-div" ng-controller="mainController">
        <div class="logo-div"><img id="merc" ng-click="changeClass()" ng-model="left" ng-class="left" src="/assets/Merc-02.png">
          <img id="hain" ng-click="changeClass()" ng-model="right" ng-class="right" src="/assets/Hain-03.png"></div>
          <form id="form-tag-id" ng-show="showme" class="form-tag animated fadeIn" novalidate>
            <p class="text-form">I want to send
            <span class="green-color">{</span><input placeholder="" class="input-amount" type="text" data-ng-model="query.inputAmount">}
            <span class="green-color">{</span><select data-ng-options="o.name for o in options" data-ng-model="query.selectedCurrency"></select>}
            to
            <span class="green-color">{</span><select data-ng-options="o.name for o in options" data-ng-model="query.selectedOutputCurrency"></select>}
            <br><br><img class="send-icon" ng-click="onSubmit()" src="/assets/send icon.png"></p>
          </form>
      <table ng-show="showtable" class="tftable animated fadeIn" border="1">
      <tr><th>Merchant 1</th><th>Rate</th><th>Merchant 2</th><th>Rate</th><th>Amount</th></tr>
      <tr data-ng-repeat="merchain in merchains"><td><a href="{{merchain.startMerchant.url}}"><img width="50px" src="{{merchain.startMerchant.logo}}"></a></td><td>{{merchain.startMerchant.rate}}</td><td><a href="{{merchain.endMerchant.url}}"><img width="50px" src="{{merchain.endMerchant.logo}}"></a></td><td>{{merchain.endMerchant.rate}}</td><td>{{merchain.convertedAmt}}</td></tr>
      </table>
        <div >
          <p></p>
        </div>

      </div>
    </div>

</body>
</html>
